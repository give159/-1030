print("=" * 80)
print("selfã¨é–¢æ•° å®Œå…¨ã‚¬ã‚¤ãƒ‰ / Complete Guide to self and Functions")
print("=" * 80)

# ============================================================================
# ã‚»ã‚¯ã‚·ãƒ§ãƒ³1: ã¾ãšæ™®é€šã®é–¢æ•°ã‹ã‚‰ / Section 1: Start with Normal Functions
# ============================================================================
print("\nã€ã‚»ã‚¯ã‚·ãƒ§ãƒ³1: æ™®é€šã®é–¢æ•°ã€‘")
print("ã€Section 1: Normal Functionsã€‘\n")

# æ™®é€šã®é–¢æ•°ï¼ˆã‚¯ãƒ©ã‚¹ã®å¤–ï¼‰
# Normal function (outside class)
def greet(name):
    # å¼•æ•°nameã‚’å—ã‘å–ã£ã¦è¡¨ç¤º
    # Receive argument name and display
    print(f"  Hello, {name}!")

# é–¢æ•°ã‚’å‘¼ã¶
# Call function
print("greet('Tanaka')  â† å¼•æ•°ã‚’1ã¤æ¸¡ã™")
print("greet('Tanaka')  â† Pass 1 argument")
greet("Tanaka")

print("\nâœ“ ãƒã‚¤ãƒ³ãƒˆ / Key Point:")
print("  æ™®é€šã®é–¢æ•°ã¯å¼•æ•°ã‚’æ˜ç¤ºçš„ã«æ¸¡ã™")
print("  Normal functions explicitly pass arguments")

# ============================================================================
# ã‚»ã‚¯ã‚·ãƒ§ãƒ³2: ã‚¯ãƒ©ã‚¹ã®ä¸­ã®é–¢æ•° = ãƒ¡ã‚½ãƒƒãƒ‰ / Section 2: Functions in Class = Methods
# ============================================================================
print("\n\n" + "=" * 80)
print("ã€ã‚»ã‚¯ã‚·ãƒ§ãƒ³2: ã‚¯ãƒ©ã‚¹ã®ä¸­ã®é–¢æ•° = ãƒ¡ã‚½ãƒƒãƒ‰ã€‘")
print("ã€Section 2: Functions in Class = Methodsã€‘\n")

# ã‚¯ãƒ©ã‚¹ã‚’å®šç¾©
# Define class
class Person:
    # ã‚¯ãƒ©ã‚¹ã®ä¸­ã®é–¢æ•° = ãƒ¡ã‚½ãƒƒãƒ‰
    # Function in class = method
    def greet(self, name):  # â† self ãŒå¿…è¦ï¼
        # selfã¯è‡ªåˆ†è‡ªèº«ã®ã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆ
        # self is the object itself
        print(f"  Hello, {name}!")

# ã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆã‚’ä½œæˆ
# Create object
person = Person()

# ãƒ¡ã‚½ãƒƒãƒ‰ã‚’å‘¼ã¶
# Call method
print("person.greet('Tanaka')  â† å¼•æ•°ã¯1ã¤ã ã‘æ¸¡ã™")
print("person.greet('Tanaka')  â† Pass only 1 argument")
person.greet("Tanaka")

print("\nâ“ ç–‘å• / Question:")
print("  def greet(self, name): ã«ã¯2ã¤ã®å¼•æ•°ãŒã‚ã‚‹")
print("  There are 2 arguments in def greet(self, name):")
print("  ã§ã‚‚ã€å‘¼ã¶ã¨ãã¯ person.greet('Tanaka') ã§1ã¤ã ã‘ï¼Ÿ")
print("  But when calling, only pass 1 argument: person.greet('Tanaka')?")

print("\nğŸ’¡ ç­”ãˆ / Answer:")
print("  self ã¯ Python ãŒè‡ªå‹•çš„ã«æ¸¡ã—ã¦ãã‚Œã‚‹ï¼")
print("  Python automatically passes self!")

# ============================================================================
# ã‚»ã‚¯ã‚·ãƒ§ãƒ³3: self ã®æ­£ä½“ / Section 3: What is self?
# ============================================================================
print("\n\n" + "=" * 80)
print("ã€ã‚»ã‚¯ã‚·ãƒ§ãƒ³3: self ã®æ­£ä½“ã€‘")
print("ã€Section 3: What is self?ã€‘\n")

# selfã®ç¢ºèªç”¨ã‚¯ãƒ©ã‚¹
# Class to check self
class Demo:
    def show_self(self):
        # selfãŒä½•ã‹ã‚’è¡¨ç¤º
        # Display what self is
        print(f"  self = {self}")
        print(f"  type(self) = {type(self)}")

# ã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆã‚’ä½œæˆ
# Create object
demo = Demo()

print("demo = Demo()  â† demoã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆã‚’ä½œæˆ")
print("demo = Demo()  â† Create demo object")
print(f"demo = {demo}")

print("\ndemo.show_self()  â† ãƒ¡ã‚½ãƒƒãƒ‰ã‚’å‘¼ã¶")
print("demo.show_self()  â† Call method")
demo.show_self()

print("\nâœ“ ç™ºè¦‹ / Discovery:")
print("  self = demo ã¨åŒã˜ï¼")
print("  self = same as demo!")
print("  ã¤ã¾ã‚Šã€self ã¯å‘¼ã³å‡ºã—ãŸã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆè‡ªèº«")
print("  In other words, self is the object that called the method")

# ============================================================================
# ã‚»ã‚¯ã‚·ãƒ§ãƒ³4: self ãŒãªã„ã¨ã©ã†ãªã‚‹ï¼Ÿ / Section 4: What happens without self?
# ============================================================================
print("\n\n" + "=" * 80)
print("ã€ã‚»ã‚¯ã‚·ãƒ§ãƒ³4: self ãŒãªã„ã¨ã©ã†ãªã‚‹ï¼Ÿã€‘")
print("ã€Section 4: What happens without self?ã€‘\n")

# selfãªã—ã®ã‚¯ãƒ©ã‚¹ï¼ˆã‚¨ãƒ©ãƒ¼ä¾‹ï¼‰
# Class without self (error example)
class BadClass:
    def bad_method():  # â† self ãŒãªã„ï¼
        print("  This will cause an error")

# ã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆã‚’ä½œæˆ
# Create object
bad = BadClass()

print("bad.bad_method()  â† ã“ã‚Œã¯ã‚¨ãƒ©ãƒ¼ã«ãªã‚‹")
print("bad.bad_method()  â† This will cause an error")

# ã‚¨ãƒ©ãƒ¼ã‚’ã‚­ãƒ£ãƒƒãƒ
# Catch error
try:
    bad.bad_method()
except TypeError as e:
    print(f"  âŒ Error: {e}")

print("\nâœ“ ç†ç”± / Reason:")
print("  Python ã¯è‡ªå‹•çš„ã« self ã‚’æ¸¡ãã†ã¨ã™ã‚‹ãŒã€")
print("  Python tries to automatically pass self, but")
print("  ãƒ¡ã‚½ãƒƒãƒ‰ã« self ãŒãªã„ã®ã§å—ã‘å–ã‚Œãªã„ï¼")
print("  The method doesn't have self to receive it!")

# ============================================================================
# ã‚»ã‚¯ã‚·ãƒ§ãƒ³5: self ã§è‡ªåˆ†ã®ãƒ‡ãƒ¼ã‚¿ã«ã‚¢ã‚¯ã‚»ã‚¹ / Section 5: Access Own Data with self
# ============================================================================
print("\n\n" + "=" * 80)
print("ã€ã‚»ã‚¯ã‚·ãƒ§ãƒ³5: self ã§è‡ªåˆ†ã®ãƒ‡ãƒ¼ã‚¿ã«ã‚¢ã‚¯ã‚»ã‚¹ã€‘")
print("ã€Section 5: Access Own Data with selfã€‘\n")

# è‡ªåˆ†ã®ãƒ‡ãƒ¼ã‚¿ã‚’æŒã¤ã‚¯ãƒ©ã‚¹
# Class with own data
class Student:
    def __init__(self, name, age):
        # self.name = è‡ªåˆ†ã® name å±æ€§
        # self.name = own name attribute
        self.name = name
        self.age = age
        print(f"  Created: {self.name}, {self.age} years old")
    
    def introduce(self):
        # self.name ã§è‡ªåˆ†ã®nameã«ã‚¢ã‚¯ã‚»ã‚¹
        # Access own name with self.name
        print(f"  Hello! I'm {self.name}, {self.age} years old")

# 2äººã®å­¦ç”Ÿã‚’ä½œæˆ
# Create 2 students
print("student1 = Student('Tanaka', 20)")
student1 = Student("Tanaka", 20)

print("\nstudent2 = Student('Sato', 22)")
student2 = Student("Sato", 22)

print("\nstudent1.introduce()  â† student1 ãŒè‡ªå·±ç´¹ä»‹")
print("student1.introduce()  â† student1 introduces itself")
student1.introduce()

print("\nstudent2.introduce()  â† student2 ãŒè‡ªå·±ç´¹ä»‹")
print("student2.introduce()  â† student2 introduces itself")
student2.introduce()

print("\nâœ“ ãƒã‚¤ãƒ³ãƒˆ / Key Point:")
print("  åŒã˜ introduce() ãƒ¡ã‚½ãƒƒãƒ‰ã ãŒã€")
print("  Same introduce() method, but")
print("  self ãŒé•ã†ã®ã§ã€é•ã†ãƒ‡ãƒ¼ã‚¿ã‚’è¡¨ç¤ºã™ã‚‹")
print("  Different self means different data is displayed")

# ============================================================================
# ã‚»ã‚¯ã‚·ãƒ§ãƒ³6: self ã§è‡ªåˆ†ã®ãƒ¡ã‚½ãƒƒãƒ‰ã‚’å‘¼ã¶ / Section 6: Call Own Methods with self
# ============================================================================
print("\n\n" + "=" * 80)
print("ã€ã‚»ã‚¯ã‚·ãƒ§ãƒ³6: self ã§è‡ªåˆ†ã®ãƒ¡ã‚½ãƒƒãƒ‰ã‚’å‘¼ã¶ã€‘")
print("ã€Section 6: Call Own Methods with selfã€‘\n")

# ãƒ¡ã‚½ãƒƒãƒ‰ã‹ã‚‰åˆ¥ã®ãƒ¡ã‚½ãƒƒãƒ‰ã‚’å‘¼ã¶
# Call another method from a method
class Calculator:
    def add(self, a, b):
        # è¶³ã—ç®—
        # Addition
        result = a + b
        print(f"  {a} + {b} = {result}")
        return result
    
    def add_and_double(self, a, b):
        # è¶³ã—ç®—ã—ã¦ã‹ã‚‰2å€ã«ã™ã‚‹
        # Add then double
        print("  Step 1: Add")
        # self.add() ã§è‡ªåˆ†ã®addãƒ¡ã‚½ãƒƒãƒ‰ã‚’å‘¼ã¶
        # Call own add method with self.add()
        sum_result = self.add(a, b)
        
        print("  Step 2: Double")
        result = sum_result * 2
        print(f"  {sum_result} * 2 = {result}")
        return result

# è¨ˆç®—æ©Ÿã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆã‚’ä½œæˆ
# Create calculator object
calc = Calculator()

print("calc.add_and_double(3, 5)")
result = calc.add_and_double(3, 5)

print("\nâœ“ ãƒã‚¤ãƒ³ãƒˆ / Key Point:")
print("  self.add() ã§è‡ªåˆ†ã®ä»–ã®ãƒ¡ã‚½ãƒƒãƒ‰ã‚’å‘¼ã¹ã‚‹")
print("  Can call own other methods with self.add()")

# ============================================================================
# ã‚»ã‚¯ã‚·ãƒ§ãƒ³7: å®Ÿéš›ã®æ›¸ãæ–¹ vs å†…éƒ¨ã®å‹•ã / Section 7: Actual Code vs Internal Behavior
# ============================================================================
print("\n\n" + "=" * 80)
print("ã€ã‚»ã‚¯ã‚·ãƒ§ãƒ³7: å®Ÿéš›ã®æ›¸ãæ–¹ vs å†…éƒ¨ã®å‹•ãã€‘")
print("ã€Section 7: Actual Code vs Internal Behaviorã€‘\n")

class Example:
    def method(self, arg):
        print(f"  self = {id(self)}")  # selfã®IDã‚’è¡¨ç¤º
        print(f"  arg = {arg}")

# ã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆã‚’ä½œæˆ
# Create object
obj = Example()
print(f"obj = {id(obj)}")  # objã®IDã‚’è¡¨ç¤º

print("\n--- æ™®é€šã®æ›¸ãæ–¹ / Normal way ---")
print("obj.method('hello')")
obj.method("hello")

print("\n--- å†…éƒ¨ã§å®Ÿéš›ã«èµ·ãã¦ã„ã‚‹ã“ã¨ / What actually happens internally ---")
print("Example.method(obj, 'hello')  â† Python ãŒå†…éƒ¨ã§ã‚„ã£ã¦ã„ã‚‹ã“ã¨")
print("Example.method(obj, 'hello')  â† What Python does internally")
Example.method(obj, "hello")

print("\nâœ“ ç™ºè¦‹ / Discovery:")
print("  obj.method('hello') ã¯å®Ÿã¯...")
print("  obj.method('hello') is actually...")
print("  Example.method(obj, 'hello') ã¨åŒã˜ï¼")
print("  Same as Example.method(obj, 'hello')!")
print("  obj ãŒ self ã¨ã—ã¦æ¸¡ã•ã‚Œã‚‹")
print("  obj is passed as self")

# ============================================================================
# ã‚»ã‚¯ã‚·ãƒ§ãƒ³8: è¤‡æ•°ã®ã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆã§ self ãŒé•ã† / Section 8: Different self for Multiple Objects
# ============================================================================
print("\n\n" + "=" * 80)
print("ã€ã‚»ã‚¯ã‚·ãƒ§ãƒ³8: è¤‡æ•°ã®ã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆã§ self ãŒé•ã†ã€‘")
print("ã€Section 8: Different self for Multiple Objectsã€‘\n")

class Counter:
    def __init__(self, name):
        # å„ã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆå›ºæœ‰ã®åå‰ã¨ã‚«ã‚¦ãƒ³ãƒˆ
        # Unique name and count for each object
        self.name = name
        self.count = 0
        print(f"  Created counter: {self.name}")
    
    def increment(self):
        # è‡ªåˆ†ã®ã‚«ã‚¦ãƒ³ãƒˆã‚’å¢—ã‚„ã™
        # Increment own count
        self.count += 1
        print(f"  {self.name}: count = {self.count}")
    
    def show(self):
        # è‡ªåˆ†ã®ã‚«ã‚¦ãƒ³ãƒˆã‚’è¡¨ç¤º
        # Show own count
        print(f"  {self.name} has count: {self.count}")

# 3ã¤ã®ã‚«ã‚¦ãƒ³ã‚¿ãƒ¼ã‚’ä½œæˆ
# Create 3 counters
print("--- ã‚«ã‚¦ãƒ³ã‚¿ãƒ¼ä½œæˆ / Create Counters ---")
counter_a = Counter("Counter A")
counter_b = Counter("Counter B")
counter_c = Counter("Counter C")

print("\n--- Counter A ã‚’å¢—ã‚„ã™ / Increment Counter A ---")
counter_a.increment()  # Counter A ã® self.count ãŒå¢—ãˆã‚‹
counter_a.increment()

print("\n--- Counter B ã‚’å¢—ã‚„ã™ / Increment Counter B ---")
counter_b.increment()  # Counter B ã® self.count ãŒå¢—ãˆã‚‹

print("\n--- å…¨ã‚«ã‚¦ãƒ³ã‚¿ãƒ¼ã‚’è¡¨ç¤º / Show All Counters ---")
counter_a.show()  # Counter A ã® count
counter_b.show()  # Counter B ã® count
counter_c.show()  # Counter C ã® count (ã¾ã 0)

print("\nâœ“ ãƒã‚¤ãƒ³ãƒˆ / Key Point:")
print("  å„ã‚ªãƒ–ã‚¸ã‚§ã‚¯ãƒˆã¯ç‹¬è‡ªã® self.count ã‚’æŒã¤")
print("  Each object has its own self.count")
print("  self ãŒé•ã†ã®ã§ã€ãƒ‡ãƒ¼ã‚¿ã‚‚åˆ¥ã€…")
print("  Different self means separate data")

# ============================================================================
# ã‚»ã‚¯ã‚·ãƒ§ãƒ³9: self ã®åå‰ã¯å¤‰ãˆã‚‰ã‚Œã‚‹ï¼Ÿ / Section 9: Can we change self's name?
# ============================================================================
print("\n\n" + "=" * 80)
print("ã€ã‚»ã‚¯ã‚·ãƒ§ãƒ³9: self ã®åå‰ã¯å¤‰ãˆã‚‰ã‚Œã‚‹ï¼Ÿã€‘")
print("ã€Section 9: Can we change self's name?ã€‘\n")

# selfã®ä»£ã‚ã‚Šã«åˆ¥ã®åå‰ã‚’ä½¿ã†ï¼ˆéæ¨å¥¨ï¼‰
# Use different name instead of self (not recommended)
class WeirdClass:
    def method(this, value):  # â† self ã®ä»£ã‚ã‚Šã« this
        # thisã§ã‚‚å‹•ãï¼ˆã§ã‚‚éæ¨å¥¨ï¼ï¼‰
        # Works with this (but not recommended!)
        print(f"  this = {this}")
        print(f"  value = {value}")

weird = WeirdClass()
print("weird.method('test')")
weird.method("test")

print("\nâš ï¸ æ³¨æ„ / Warning:")
print("  æŠ€è¡“çš„ã«ã¯ self ä»¥å¤–ã®åå‰ã‚‚ä½¿ãˆã‚‹ãŒ...")
print("  Technically can use names other than self, but...")
print("  Python ã®æ…£ç¿’ã§ã¯å¿…ãš self ã‚’ä½¿ã†ã¹ãï¼")
print("  Python convention is to always use self!")

# ============================================================================
# ã‚»ã‚¯ã‚·ãƒ§ãƒ³10: å®Ÿè·µãƒ‘ã‚¿ãƒ¼ãƒ³ / Section 10: Practical Patterns
# ============================================================================
print("\n\n" + "=" * 80)
print("ã€ã‚»ã‚¯ã‚·ãƒ§ãƒ³10: å®Ÿè·µãƒ‘ã‚¿ãƒ¼ãƒ³ã€‘")
print("ã€Section 10: Practical Patternsã€‘\n")

class BankAccount:
    def __init__(self, owner, balance):
        # åˆæœŸè¨­å®š
        # Initial setup
        self.owner = owner
        self.balance = balance
        print(f"  Account created: {self.owner}, Balance: ${self.balance}")
    
    def deposit(self, amount):
        # å…¥é‡‘ï¼ˆè‡ªåˆ†ã®æ®‹é«˜ã‚’å¢—ã‚„ã™ï¼‰
        # Deposit (increase own balance)
        self.balance += amount
        print(f"  Deposited ${amount}")
        self.show_balance()  # è‡ªåˆ†ã®åˆ¥ãƒ¡ã‚½ãƒƒãƒ‰ã‚’å‘¼ã¶
    
    def withdraw(self, amount):
        # å‡ºé‡‘ï¼ˆè‡ªåˆ†ã®æ®‹é«˜ã‚’æ¸›ã‚‰ã™ï¼‰
        # Withdraw (decrease own balance)
        if self.balance >= amount:
            self.balance -= amount
            print(f"  Withdrew ${amount}")
            self.show_balance()  # è‡ªåˆ†ã®åˆ¥ãƒ¡ã‚½ãƒƒãƒ‰ã‚’å‘¼ã¶
        else:
            print(f"  âŒ Insufficient balance!")
    
    def show_balance(self):
        # æ®‹é«˜è¡¨ç¤ºï¼ˆè‡ªåˆ†ã®ãƒ‡ãƒ¼ã‚¿ã‚’è¡¨ç¤ºï¼‰
        # Show balance (display own data)
        print(f"  {self.owner}'s balance: ${self.balance}")

print("--- Tanaka ã®å£åº§ / Tanaka's Account ---")
account1 = BankAccount("Tanaka", 1000)

print("\naccount1.deposit(500)  â† 500ãƒ‰ãƒ«å…¥é‡‘")
account1.deposit(500)

print("\naccount1.withdraw(300)  â† 300ãƒ‰ãƒ«å‡ºé‡‘")
account1.withdraw(300)

print("\n--- Sato ã®å£åº§ / Sato's Account ---")
account2 = BankAccount("Sato", 2000)

print("\naccount2.withdraw(500)  â† 500ãƒ‰ãƒ«å‡ºé‡‘")
account2.withdraw(500)

print("\n--- ä¸¡æ–¹ã®æ®‹é«˜ã‚’ç¢ºèª / Check Both Balances ---")
account1.show_balance()  # Tanaka: $1200
account2.show_balance()  # Sato: $1500

