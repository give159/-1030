## 7. å®Ÿç”¨ä¾‹ï¼šãƒ¦ãƒ¼ã‚¶ãƒ¼ç®¡ç†ã‚·ã‚¹ãƒ†ãƒ 

```python
import hashlib
from datetime import datetime

class User:
    """ãƒ¦ãƒ¼ã‚¶ãƒ¼ã‚¯ãƒ©ã‚¹"""
    
    # ã‚¯ãƒ©ã‚¹å¤‰æ•°
    all_users = []
    total_logins = 0
    
    def __init__(self, username, email):
        self.username = username
        self.email = email
        self.created_at = datetime.now()
        self._password_hash = None
        User.all_users.append(self)
    
    # â‘  ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹ãƒ¡ã‚½ãƒƒãƒ‰
    def set_password(self, password):
        """ãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰ã‚’è¨­å®šï¼ˆã“ã®ãƒ¦ãƒ¼ã‚¶ãƒ¼ã®ã¿ï¼‰"""
        if not self.is_valid_password(password):
            raise ValueError("ãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰ã¯8æ–‡å­—ä»¥ä¸Šå¿…è¦ã§ã™")
        self._password_hash = hashlib.sha256(password.encode()).hexdigest()
    
    def check_password(self, password):
        """ãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰ç¢ºèªï¼ˆã“ã®ãƒ¦ãƒ¼ã‚¶ãƒ¼ã®ã¿ï¼‰"""
        test_hash = hashlib.sha256(password.encode()).hexdigest()
        return test_hash == self._password_hash
    
    def login(self):
        """ãƒ­ã‚°ã‚¤ãƒ³ï¼ˆã“ã®ãƒ¦ãƒ¼ã‚¶ãƒ¼ï¼‰"""
        User.total_logins += 1
        print(f"âœ… {self.username}ãŒãƒ­ã‚°ã‚¤ãƒ³ã—ã¾ã—ãŸ")
    
    # â‘¡ ã‚¯ãƒ©ã‚¹ãƒ¡ã‚½ãƒƒãƒ‰
    @classmethod
    def get_user_count(cls):
        """å…¨ãƒ¦ãƒ¼ã‚¶ãƒ¼æ•°ã‚’å–å¾—"""
        return len(cls.all_users)
    
    @classmethod
    def find_by_username(cls, username):
        """ãƒ¦ãƒ¼ã‚¶ãƒ¼åã§æ¤œç´¢"""
        for user in cls.all_users:
            if user.username == username:
                return user
        return None
    
    @classmethod
    def get_total_logins(cls):
        """ç·ãƒ­ã‚°ã‚¤ãƒ³å›æ•°"""
        return cls.total_logins
    
    # â‘¢ é™çš„ãƒ¡ã‚½ãƒƒãƒ‰
    @staticmethod
    def is_valid_email(email):
        """ãƒ¡ãƒ¼ãƒ«ã‚¢ãƒ‰ãƒ¬ã‚¹ã®å¦¥å½“æ€§ãƒã‚§ãƒƒã‚¯"""
        return '@' in email and '.' in email.split('@')[1]
    
    @staticmethod
    def is_valid_password(password):
        """ãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰ã®å¦¥å½“æ€§ãƒã‚§ãƒƒã‚¯"""
        return len(password) >= 8
    
    @staticmethod
    def generate_username(first_name, last_name):
        """ãƒ¦ãƒ¼ã‚¶ãƒ¼åã‚’è‡ªå‹•ç”Ÿæˆ"""
        return f"{first_name.lower()}.{last_name.lower()}"


# ä½¿ç”¨ä¾‹
print("=== ãƒ¦ãƒ¼ã‚¶ãƒ¼ä½œæˆ ===")
user1 = User("tanaka", "tanaka@example.com")
user2 = User("suzuki", "suzuki@example.com")

user1.set_password("password123")
user2.set_password("securepass456")

print("\n=== ã‚¤ãƒ³ã‚¹ã‚¿ãƒ³ã‚¹ãƒ¡ã‚½ãƒƒãƒ‰ ===")
user1.login()
user1.login()
user2.login()

print(f"\nãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰ç¢ºèª: {user1.check_password('password123')}")  # True

print("\n=== ã‚¯ãƒ©ã‚¹ãƒ¡ã‚½ãƒƒãƒ‰ ===")
print(f"ãƒ¦ãƒ¼ã‚¶ãƒ¼æ•°: {User.get_user_count()}äºº")
print(f"ç·ãƒ­ã‚°ã‚¤ãƒ³å›æ•°: {User.get_total_logins()}å›")

found_user = User.find_by_username("tanaka")
if found_user:
    print(f"è¦‹ã¤ã‹ã‚Šã¾ã—ãŸ: {found_user.username}")

print("\n=== é™çš„ãƒ¡ã‚½ãƒƒãƒ‰ ===")
print(f"ãƒ¡ãƒ¼ãƒ«æ¤œè¨¼: {User.is_valid_email('test@example.com')}")  # True
print(f"ãƒ¡ãƒ¼ãƒ«æ¤œè¨¼: {User.is_valid_email('invalid-email')}")      # False

print(f"ãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰æ¤œè¨¼: {User.is_valid_password('short')}")       # False
print(f"ãƒ‘ã‚¹ãƒ¯ãƒ¼ãƒ‰æ¤œè¨¼: {User.is_valid_password('longenough')}")  # True

print(f"ãƒ¦ãƒ¼ã‚¶ãƒ¼åç”Ÿæˆ: {User.generate_username('å¤ªéƒ', 'å±±ç”°')}")
```

